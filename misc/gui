from Tkinter import *


root = Tk()

topMenu = Frame(root,bg="")
topMenu.pack(fill=X)
bottomFrame = Frame(root)
bottomFrame.pack(side=BOTTOM)

fileBtn = Button(topMenu, text="File", fg="Black")

button2 = Button(bottomFrame, text="Click", fg="green")
button3 = Button(bottomFrame, text="Click", fg="blue")
button4 = Button(bottomFrame, text="Click", fg="orange")

fileBtn.pack(side=LEFT)
button2.pack(side=LEFT)
button3.pack(side=RIGHT)
button4.pack(side=BOTTOM)

root.mainloop()
